@model _24DH112135_MyStore.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .accountbtn {
        width: 275px;
        height: 40px;
        border: 1px solid #808080;
        margin: 5px;
        align-items: center;
    }
</style>

<!DOCTYPE html>
<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <h2 class="col-md-6" style="text-align:left;">Đăng nhập</h2>
        </div>
        @*Tên đăng nhập*@
        <div class="mb-3">
            @Html.LabelFor(m => m.Username, new { @class = "form-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
        </div>
        @*Mật khẩu*@
        <div class="mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "form-label col-md-2" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="mb-3">
            <div class="offset-md-2 col-md-4">
                <input type="submit" value="Đăng nhập" class="btn btn-info accountbtn" /> <br />
                <p>Bạn chưa Có Tài Khoản? <a href="@Url.Action("Register","Account",null)">Đăng ký ngay</a></p>
            </div>
        </div>
    }
</div>
